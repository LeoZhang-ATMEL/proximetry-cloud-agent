{
    .params = params,
    .params_num = ARRAY_ELEMS(params),
    .stats = stats,
    .stats_num = ARRAY_ELEMS(stats),
    .alerts = alerts,
    .alerts_num = ARRAY_ELEMS(alerts)
};

